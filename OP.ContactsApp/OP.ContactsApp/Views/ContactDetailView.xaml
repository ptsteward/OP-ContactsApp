<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OP.ContactsApp.Views.ContactDetailView"
             Title="Contact Detail">
    <ContentPage.Content>
        <StackLayout>
            <Switch IsToggled="{Binding Favorite}"/>
            <Label FontSize="Large" FontAttributes="Bold" Text="{Binding SelectedContact.Name}"/>
            <Label FontSize="Large" FontAttributes="Bold" Text="{Binding SelectedContact.Email}"/>
            <Label FontSize="Large" FontAttributes="Bold" Text="{Binding SelectedContact.Number}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>