<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OP.ContactsApp.Views.ContactDetailView"
             Title="Contact Detail">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" FontAttributes="Bold" Text="Favorite Contact"/>
                <Switch IsToggled="{Binding SelectedContact.Favorite}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" FontAttributes="Bold" Text="Name:"/>
                <Label FontSize="Large" Text="{Binding SelectedContact.Name}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" FontAttributes="Bold" Text="Email:"/>
                <Label FontSize="Large" Text="{Binding SelectedContact.Email}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" FontAttributes="Bold" Text="Number:"/>
                <Label FontSize="Large" Text="{Binding SelectedContact.Number}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>